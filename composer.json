{
    "name": "hiwelo/raccoon",
    "description": "Raccoon is a personal wordpress starter theme based on NPM, Babel ES-2015, Gulp and Knacss",
    "type": "wordpress-theme",
    "keywords" : [
      "wordpress",
      "starter theme",
      "raccoon"
    ],
    "homepage": "https://github.com/hiwelo/raccoon",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Damien Senger",
            "email": "hi@hiwelo.co",
            "homepage": "https://hiwelo.co/",
            "role": "Developer"
        }
    ],
    "support": {
      "issues": "https://github.com/hiwelo/raccoon/issues",
      "source": "https://github.com/hiwelo/raccoon/"
    },
    "require": {
      "composer/installers": "~1.0"
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "^2.5",
      "symfony/debug": "^3.0",
      "phpdocumentor/phpdocumentor": "^2.8",
      "symfony/var-dumper": "^3.0"
    },
    "autoload": {
      "psr-4": {
        "Hwlo\\Raccoon\\": "lib/"
      }
    },
    "scripts": {
      "pre-install-cmd": [
        "git pull"
      ],
      "post-install-cmd": [
        "bash contrib/setup.sh",
        "npm install || true",
        "composer dump-autoload --optimize"
      ],
      "pre-update-cmd": [
        "git pull"
      ],
      "post-update-cmd": [
        "bash contrib/setup.sh",
        "npm update || true",
        "composer dump-autoload --optimize"
      ],
      "autoload": [
        "composer dump-autoload --optimize"
      ],
      "test": [
        "./vendor/squizlabs/php_codesniffer/scripts/phpcs --extensions=php --ignore=vendor/,docs/,node_modules/ .",
        "jshint --reporter=node_modules/jshint-stylish --exclude-path=.gitignore ."
      ],
      "phpcbf": ["./vendor/squizlabs/php_codesniffer/scripts/phpcbf --extensions=php --ignore=vendor/,docs/,node_modules/ ."],
      "documentation": [
        "./vendor/phpdocumentor/phpdocumentor/bin/phpdoc -d . -t ./docs/api/ --ignore=vendor/,docs/,node_modules/"
      ],
      "work": [
        "npm start"
      ]
    }
}
